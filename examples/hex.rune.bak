Genesis:AllVertices := Genesis:VerticesT1 || Genesis:VerticesT2

# Generate Edges using the Inner Product rule (0.5)
# Flow: Vertices -> Builtin -> Edges
Genesis:Edges := Genesis:AllVertices -> E8EdgesWhere(0.5)

# Final Graph Construction
Genesis:Graph := HexGraph(Genesis:AllVertices, Genesis:Edges)

