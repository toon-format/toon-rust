  description: "Complete semantic graph ontology aligned with the E8 root system."
  version: "1.0.0"
  source: "holosphere.rs"
  dependencies: ["fory", "gf8", "xuid", "tokio"]

# ----------------------------------------------------------------------------
# 2. SCHEMA DEFINITIONS
# ----------------------------------------------------------------------------
